---
import type { CapabilitiesMatrix } from '../types';

interface Props {
  matrix: CapabilitiesMatrix;
}

const { matrix } = Astro.props;
---

<details class="section">
  <summary class="section-title">Capabilities Matrix</summary>

  {matrix.summary && (
    <div class="cap-summary">
      <p>{matrix.summary}</p>
    </div>
  )}

  <div class="cap-categories">
    {matrix.categories.map((category) => (
      <div class="cap-category">
        <h4 class="cap-category-title">{category.name}</h4>
        <div class="cap-entries">
          {category.capabilities.map((cap) => (
            <div class="cap-entry">
              <div class="cap-entry-name">{cap.name}</div>
              <div class="cap-entry-values">
                {matrix.technologies.map((tech) => (
                  <div class="cap-value-row">
                    <span class="cap-tech-label">{tech}</span>
                    <span class="cap-tech-text">{cap.values[tech] || 'â€”'}</span>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    ))}
  </div>
</details>

<style>
  .cap-summary {
    margin-bottom: 1.25rem;
    padding: 0.75rem 1rem;
    background: var(--bg-surface);
    border-left: 3px solid var(--accent);
    border-radius: 0 var(--radius) var(--radius) 0;
  }

  .cap-summary p {
    margin: 0;
    color: var(--text);
    font-size: 0.95rem;
    line-height: 1.65;
  }

  .cap-categories {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
  }

  .cap-category {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    overflow: hidden;
  }

  .cap-category-title {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.04em;
    color: var(--accent);
    padding: 0.6rem 1.25rem;
    margin: 0;
    background: color-mix(in srgb, var(--accent) 6%, var(--bg-surface));
    border-bottom: 1px solid var(--border);
  }

  .cap-entries {
    display: flex;
    flex-direction: column;
  }

  .cap-entry {
    padding: 1rem 1.25rem;
    border-bottom: 1px solid var(--border);
  }

  .cap-entry:last-child {
    border-bottom: none;
  }

  .cap-entry-name {
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--text);
    margin-bottom: 0.6rem;
  }

  .cap-entry-values {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .cap-value-row {
    display: flex;
    align-items: baseline;
    gap: 0.75rem;
  }

  .cap-tech-label {
    display: inline-block;
    font-family: var(--font-mono);
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 8%, transparent);
    border: 1px solid color-mix(in srgb, var(--accent) 20%, transparent);
    border-radius: 3px;
    padding: 0.15rem 0.5rem;
    min-width: 7.5rem;
    text-align: center;
    flex-shrink: 0;
  }

  .cap-tech-text {
    font-size: 0.9rem;
    line-height: 1.6;
    color: var(--text);
  }

  /* Desktop: side-by-side tech value cards */
  @media (min-width: 768px) {
    .cap-entry-values {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 0.75rem;
    }

    .cap-value-row {
      flex-direction: column;
      align-items: stretch;
      gap: 0.4rem;
      background: var(--bg-surface);
      border-radius: var(--radius);
      padding: 0.75rem;
    }

    .cap-tech-label {
      align-self: flex-start;
    }
  }
</style>
