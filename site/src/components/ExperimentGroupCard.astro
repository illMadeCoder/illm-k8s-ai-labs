---
import type { ExperimentGroup } from '../lib/experiments';
import { getDisplayTitle } from '../lib/experiments';
import { formatDuration, formatDate, formatCost } from '../lib/format';
import { getSeriesMeta } from '../lib/series';

interface Props {
  group: ExperimentGroup;
}

const { group } = Astro.props;
const { latest } = group;
const base = import.meta.env.BASE_URL;

const seriesId = latest.series;
const seriesMeta = seriesId ? getSeriesMeta(seriesId) : undefined;
const seriesName = seriesMeta?.name;
const seriesColor = seriesMeta?.color;

const verdict = latest.analysis?.hypothesisVerdict;
const verdictLabel = verdict === 'validated' ? 'Validated'
  : verdict === 'invalidated' ? 'Invalidated'
  : verdict === 'insufficient' ? 'Insufficient'
  : null;
const verdictClass = verdict === 'validated' ? 'badge-complete'
  : verdict === 'invalidated' ? 'badge-failed'
  : verdict === 'insufficient' ? 'badge-warning'
  : 'badge-running';
---

<a href={`${base}experiments/${group.baseName}/`} class="card card-link" data-tags={group.tags.join(',')} data-verdict={verdict || 'none'} style={`border-left: 3px solid ${seriesColor || '#475569'}`}>
  <div class="card-header">
    <div class="card-header-left">
      {verdictLabel && <span class={`badge ${verdictClass}`}>{verdictLabel}</span>}
      <span class="run-count">{group.runs.length} {group.runs.length === 1 ? 'run' : 'runs'}</span>
    </div>
    <span class="card-date">{formatDate(latest.createdAt)}</span>
  </div>
  <h3 class="card-title">{getDisplayTitle(group)}</h3>
  <div class="card-series">
    {seriesName && seriesId ? (
      <>Part of the <span
        class="series-link"
        style={seriesColor ? `color: ${seriesColor}` : undefined}
        data-href={`${base}series/${seriesId}/`}
      >{seriesName}</span> Series</>
    ) : (
      <span class="no-series">Standalone experiment</span>
    )}
  </div>
  <p class="card-desc">{latest.description}</p>
  {group.tags.length > 0 && (
    <div class="card-tags">
      {group.tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  )}
  <div class="card-meta">
    <span>Duration: {formatDuration(latest.durationSeconds)}</span>
    <span>Targets: {latest.targets.length}</span>
    {latest.costEstimate && <span>Cost: {formatCost(latest.costEstimate.totalUSD)}</span>}
  </div>
</a>

<style>
  .card-link {
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: transform 0.2s ease-out, border-color 0.2s ease-out, box-shadow 0.2s ease-out;
    background: linear-gradient(
      135deg,
      color-mix(in srgb, var(--accent) 6%, var(--bg-card)) 0%,
      var(--bg-card) 60%
    ) !important;
  }
  .card-link:hover {
    transform: translateY(-2px);
    border-color: color-mix(in srgb, var(--accent) 40%, var(--border));
    box-shadow: var(--shadow-lg), 0 0 0 1px color-mix(in srgb, var(--accent) 15%, transparent);
  }
  /* .card-link[data-verdict="validated"] {
    border-top: 3px solid var(--success);
  }
  .card-link[data-verdict="invalidated"] {
    border-top: 3px solid var(--error);
  }
  .card-link[data-verdict="insufficient"] {
    border-top: 3px solid var(--warning);
  } */
  .card-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 0.75rem;
  }
  .card-header-left {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }
  .run-count {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--accent);
    background: color-mix(in srgb, var(--accent) 10%, transparent);
    padding: 0.1rem 0.5rem;
    border-radius: 999px;
  }
  .card-date {
    font-size: 0.8rem;
    color: var(--text-muted);
  }
  .card-title {
    font-size: 1.1rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-family: var(--font-mono);
    overflow-wrap: break-word;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .card-desc {
    font-size: 0.9rem;
    color: var(--text-muted);
    margin-bottom: 0.75rem;
    line-height: 1.5;
    flex: 1;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
  .card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.375rem;
    margin-bottom: 0.75rem;
  }
  .card-series {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }
  .series-link {
    font-weight: 600;
    cursor: pointer;
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 2px;
    transition: text-decoration-color 0.15s;
  }
  .series-link:hover {
    text-decoration-color: currentColor;
  }
  .card-meta {
    display: flex;
    gap: 1.5rem;
    font-size: 0.8rem;
    color: var(--text-muted);
  }
</style>

<script>
  document.querySelectorAll('.series-link[data-href]').forEach((el) => {
    el.addEventListener('click', (e) => {
      e.preventDefault();
      e.stopPropagation();
      window.location.href = (el as HTMLElement).dataset.href!;
    });
  });
</script>
