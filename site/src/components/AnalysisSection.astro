---
interface Props {
  title: string;
  overview: string;
  findings?: string[];
  extras?: string[];
  extrasLabel?: string;
}

const { title, overview, findings, extras, extrasLabel } = Astro.props;
---

<details class="section analysis-section">
  <summary class="section-title">{title}</summary>
  <p class="analysis-section-overview">{overview}</p>

  {findings && findings.length > 0 && (
    <ol class="findings-list">
      {findings.map((finding) => (
        <li>{finding}</li>
      ))}
    </ol>
  )}

  {extras && extras.length > 0 && (
    <div class="analysis-section-extras">
      {extrasLabel && <h4 class="extras-label">{extrasLabel}</h4>}
      <ul class="extras-list">
        {extras.map((item) => (
          <li>{item}</li>
        ))}
      </ul>
    </div>
  )}
</details>

<style>
  .analysis-section-overview {
    color: var(--text);
    line-height: 1.65;
    margin-bottom: 1rem;
  }

  .findings-list {
    list-style: none;
    padding: 0;
    counter-reset: finding;
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .findings-list li {
    counter-increment: finding;
    padding: 0.75rem 1rem 0.75rem 2.25rem;
    background: var(--bg-surface);
    border-left: 3px solid var(--accent);
    border-bottom: 1px solid var(--border);
    border-radius: 0;
    position: relative;
    line-height: 1.65;
    font-size: 0.9rem;
    color: var(--text);
  }

  .findings-list li:last-child {
    border-bottom: none;
  }

  .findings-list li::before {
    content: counter(finding) ".";
    position: absolute;
    left: 0.65rem;
    top: 0.75rem;
    font-size: 0.8rem;
    font-weight: 600;
    color: var(--text-muted);
  }

  .analysis-section-extras {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid var(--border);
  }

  .extras-label {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.03em;
    color: var(--text-muted);
    margin-bottom: 0.5rem;
  }

  .extras-list {
    list-style: none;
    padding: 0;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .extras-list li {
    padding: 0.5rem 0.75rem 0.5rem 1.75rem;
    position: relative;
    font-size: 0.85rem;
    color: var(--text-muted);
    line-height: 1.5;
  }

  .extras-list li::before {
    content: "\2192";
    position: absolute;
    left: 0.5rem;
    color: var(--accent);
    font-weight: 600;
  }
</style>
